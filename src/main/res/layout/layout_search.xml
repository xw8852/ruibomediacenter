<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"

    android:layout_weight="1">

    <ImageView
        android:id="@+id/topBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_left_top" />

    <ImageView
        android:id="@+id/bgBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_right_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bgBottom"
        android:layout_alignTop="@+id/topBg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bg"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/bg"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_search" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bgBottom"
        android:layout_alignTop="@+id/bgBottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_default"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全选"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="已选择3首歌曲，下载需支付2.0元"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_default"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="下载"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_default"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="收藏"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
