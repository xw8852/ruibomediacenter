<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="350dp"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/font_red_0"
        android:visibility="visible" />

    <com.msx7.lib.widget.shape.ShapeEditText
        android:id="@+id/loginName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="请输入卡号"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/font_color_3"
        app:radius="10dp"
        app:solide="@color/white"
        app:strokeColor="#a6a6a6"
        app:strokeWidth="1dp" />
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"/>
    <com.msx7.lib.widget.shape.ShapeEditText
        android:id="@+id/loginPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="请输入充值金额"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/font_color_3"
        app:radius="10dp"
        app:solide="@color/white"
        app:strokeColor="#a6a6a6"
        app:strokeWidth="1dp" />
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"/>
    <com.msx7.lib.widget.shape.ShapeTextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="立即开通"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        app:radius="10dp"
        app:solide="#ff791e" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="开卡初始密码:111111" />
</LinearLayout>